<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<VBox spacing="5.0" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" >
    <padding>
        <Insets top="10" bottom="10" right="10" left="10"/>
    </padding>
    <TextArea fx:id="mainTextArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox spacing ="5.0">
    <TextField fx:id="mainTextField" promptText="Введите ваше сообщение" HBox.hgrow="ALWAYS" />
    <Button fx:id="sendButton" text="Отправить" onAction="#sendMassage" defaultButton = "true"/>
    </HBox>
</VBox>
